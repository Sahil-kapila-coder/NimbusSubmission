import java.util.ArrayList;
import java.util.Scanner;

public class SumUsingAutoboxing {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ArrayList<Integer> numbers = new ArrayList<>();  // Collection to store Integer objects

        System.out.println("Enter integers separated by spaces:");
        String input = sc.nextLine();  // Read the entire line of input

        // Split input by spaces
        String[] values = input.split(" ");

        // Parse each string to int and add (autoboxing occurs here)
        for (String value : values) {
            int num = Integer.parseInt(value);  // String parsing
            numbers.add(num);  // Autoboxing: int -> Integer
        }

        int sum = 0;

        // Enhanced for loop automatically unboxes Integer -> int
        for (Integer n : numbers) {
            sum += n;  // Unboxing happens here
        }

        System.out.println("The sum of entered integers is: " + sum);

        sc.close();
    }
}
